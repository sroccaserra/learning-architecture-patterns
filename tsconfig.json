{
  "compilerOptions": {
      "allowJs": true,
      "module": "commonjs",
      "noEmit": true,
      "skipLibCheck": true,
      "strictNullChecks": true,
      "lib": ["es2021"],
      "target": "es2021"
    },
  "exclude": ["node_modules"],
  "include": ["./src/**/*", "./test/**/*"],
  "compileOnSave": true,
  "typingOptions": {
      "enableAutoDiscovery": true
  }
}
